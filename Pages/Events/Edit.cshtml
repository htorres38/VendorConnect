@page "{id:int}"
@model VendorConnect.Pages.Events.EditModel
@{
    ViewData["Title"] = "Edit Event";
}

<h1>Edit Event</h1>

<h4>Event</h4>
<hr />
<form method="post">
    <input type="hidden" asp-for="Event.ID" />
    <div class="form-group">
        <label asp-for="Event.CoupleNames" class="control-label"></label>
        <input asp-for="Event.CoupleNames" class="form-control" />
        <span asp-validation-for="Event.CoupleNames" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.EventDate" class="control-label"></label>
        <input asp-for="Event.EventDate" class="form-control" />
        <span asp-validation-for="Event.EventDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.VendorID" class="control-label">Vendor</label>
        <select asp-for="Event.VendorID" class="form-control"
                asp-items="Model.VendorList">
            <option value="">-- Select Vendor --</option>
        </select>
        <span asp-validation-for="Event.VendorID" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button> |
    <a asp-page="./Index">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
