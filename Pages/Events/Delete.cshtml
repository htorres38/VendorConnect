@page "{id:int}"
@model VendorConnect.Pages.Events.DeleteModel

<h2>Delete Event</h2>

<h3>Are you sure you want to delete this event?</h3>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Couple Names</dt>
        <dd class="col-sm-10">@Model.Event.CoupleNames</dd>

        <dt class="col-sm-2">Event Date</dt>
        <dd class="col-sm-10">@Model.Event.EventDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Vendor</dt>
        <dd class="col-sm-10">@Model.Event.Vendor?.BusinessName</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Event.ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
