@page
@model VendorConnect.Pages.Events.DetailsModel
@{
    ViewData["Title"] = "Event Details";
}

<h1>Event Details</h1>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Couple Names</dt>
        <dd class="col-sm-10">@Model.Event.CoupleNames</dd>

        <dt class="col-sm-2">Event Date</dt>
        <dd class="col-sm-10">@Model.Event.EventDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Vendor</dt>
        <dd class="col-sm-10">@Model.Event.Vendor?.BusinessName</dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Event.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
